<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back!"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_margin="10dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/border"
                    android:padding="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgTotalPatients"
                        android:layout_width="35dp"
                        android:layout_height="50dp"
                        android:src="@drawable/patients" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/imgTotalPatients">

                    <TextView
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content"
                        android:text="Patients" />

                        <TextView
                            android:id="@+id/tvPatients"
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/border"
                    android:padding="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgTotalUsers"
                        android:layout_width="35dp"
                        android:layout_height="50dp"
                        android:src="@drawable/doctors" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/imgTotalUsers">

                    <TextView
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_height="wrap_content"
                        android:text="Users" />

                        <TextView
                            android:id="@+id/tvUsers"
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/border"
                    android:padding="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgTotalAdPatients"
                        android:layout_width="35dp"
                        android:layout_height="50dp"
                        android:src="@drawable/bed" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/imgTotalAdPatients">

                        <TextView
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content"
                            android:text="Admitted" />

                        <TextView
                            android:id="@+id/tvAdmitted"
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/border"
                    android:padding="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgDeadTotalUsers"
                        android:layout_width="35dp"
                        android:layout_height="50dp"
                        android:src="@drawable/corpse" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/imgDeadTotalUsers">

                        <TextView
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content"
                            android:text="Dead" />

                        <TextView
                            android:id="@+id/tvDead"
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/patientsRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/tvNoPatients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No patients today"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:fontFamily="sans-serif-medium" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>